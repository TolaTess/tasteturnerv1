rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth != null;
    }

    // Read-only collections: authenticated users can read, but no writes
    match /general/{documentId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    match /category/{categoryId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    match /headers/{headerId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    match /macros/{documentId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    match /rainbows/{documentId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    match /kidsfilter/{documentId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    match /winners/{documentId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // All other collections: authenticated users can read and write
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}

